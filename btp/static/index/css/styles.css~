/**** Mobile layout ****/
@media (max-width: 900px) {
  .septem-navigation-container {
    display: none;
  }

  .septem-title {
    display: none !important;
  }

  .septem-mobile-title {
    display: block !important;
    position: absolute;
    left: calc(50% - 70px);
    top: 12px;
    -webkit-transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* WebViews in iOS 9 break the "~" operator, and WebViews in OS X 10.10 break
     consecutive "+" operators in some cases. Therefore, we need to use both
     here to cover all the bases. */
  .septem-mobile-title,
  .septem-search-box.is-focused + .septem-navigation-container + .septem-mobile-title {
    opacity: 0;
  }

  .septem-more-button {
    display: none;
  }

  .septem-search-box.is-focused {
    width: calc(100% - 48px);
  }

  .septem-search-box .mdl-textfield__expandable-holder {
    width: 100%;
  }

  .septem-be-together-section {
    height: 350px;
  }

  .septem-slogan {
